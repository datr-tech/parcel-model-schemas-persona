{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es2022",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@app-parcel-model-schemas-persona": ["./src/*"],
      "@test-parcel-model-schemas-persona": ["./test/*"]
    }
  },
  "exclude": [".git", ".github", ".husky", ".jest", "dist"],
  "files": ["src/index.ts"],
  "include": ["./src/**/*.ts"]
}
